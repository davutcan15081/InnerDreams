rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);

      // User's dream entries (nested collection)
      match /dream_entries/{entryId} {
        allow read, write: if isOwner(userId);
      }

      // User's interpretations (nested collection)
      match /interpretations/{interpretationId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Public content collections - anyone can read, only content creators can write
    match /doctor_content/{contentId} {
      allow read: if true; // Public read access
      allow create: if isAuthenticated() && request.auth.token.role == 'doctor';
      allow update, delete: if isAuthenticated() &&
        (resource.data.authorId == request.auth.uid || request.auth.token.role == 'admin');
    }

    match /writer_content/{contentId} {
      allow read: if true; // Public read access
      allow create: if isAuthenticated() && request.auth.token.role == 'writer';
      allow update, delete: if isAuthenticated() &&
        (resource.data.authorId == request.auth.uid || request.auth.token.role == 'admin');
    }

    match /education_content/{contentId} {
      allow read: if true; // Public read access
      allow create: if isAuthenticated() &&
        (request.auth.token.role == 'educator' || request.auth.token.role == 'admin');
      allow update, delete: if isAuthenticated() &&
        (resource.data.authorId == request.auth.uid || request.auth.token.role == 'admin');
    }

    // Premium content - only accessible to premium users
    match /premium_content/{contentId} {
      allow read: if isAuthenticated() &&
        (request.auth.token.isPremium == true || request.auth.token.role == 'admin');
      allow write: if isAuthenticated() && request.auth.token.role == 'admin';
    }

    // Comments on content
    match /{contentCollection}/{contentId}/comments/{commentId} {
      allow read: if true; // Anyone can read comments
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || request.auth.token.role == 'admin');
    }

    // Bookmarks - users can manage their own bookmarks
    match /users/{userId}/bookmarks/{bookmarkId} {
      allow read, write: if isOwner(userId);
    }

    // Journey progress and tasks - users can manage their own journey
    match /users/{userId}/journey/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // Achievements - users can manage their own achievements
    match /users/{userId}/achievements/{achievementId} {
      allow read, write: if isOwner(userId);
    }

    // Sessions - users can manage their own sessions
    match /sessions/{sessionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // User's personal sessions (nested collection)
    match /users/{userId}/sessions/{sessionId} {
      allow read, write: if isOwner(userId);
    }

    // Analytics and metrics (admin only)
    match /analytics/{document=**} {
      allow read, write: if isAuthenticated() && request.auth.token.role == 'admin';
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
